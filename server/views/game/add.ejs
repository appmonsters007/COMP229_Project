<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Tournament Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Tournament Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter a brief description"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="ownerTextField">Owner</label>
                    <input type="text" class="form-control"
                    id="ownerTextField"
                    placeholder="Enter the owner name"
                    name="owner" required>
                </div>

                 <div class="form-group">
                    <label for="activeTextField">Active Tournament</label>
                    <input type="text" class="form-control"
                    id="activeTextField"
                    placeholder="Y/N"
                    name="active"  
                    value="<%= game.active %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dateTextField">Date completed (If No)</label>
                    <input type="date" class="form-control"
                    id="dateTextField"
                    placeholder="DD/MM/YYYY"
                    name="date" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/game-match" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>